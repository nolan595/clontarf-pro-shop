generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum ProductCategory {
  clubs
  balls
  apparel
  accessories
  shoes
  bags
}

model Product {
  id                   String           @id @default(cuid())
  name                 String
  description          String?
  price                Float
  cloudinary_public_id String?
  category             ProductCategory?
  brand                String?
  is_featured          Boolean          @default(false)
  in_stock             Boolean          @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VoucherPurchase {
  id              String  @id @default(cuid())
  amount          Float
  buyer_name      String
  buyer_email     String
  recipient_name  String?
  recipient_email String?
  message         String?
  currency        String  @default("EUR")

  sumupCheckoutId String?   @unique
  sumupReference  String?   @unique
  paidAt          DateTime?
  emailedAt       DateTime?

  status VoucherPurchaseStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum VoucherPurchaseStatus {
  PENDING
  PAID
  FAILED
}
